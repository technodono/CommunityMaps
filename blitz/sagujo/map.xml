<map proto="1.4.2">
<name>Sagujo</name>
<version>1.0.5</version>
<objective>Eliminate the other teams before the 3 minutes are up!</objective>
<authors>
    <author uuid="9d4779a8-d35f-45d2-b51c-95de7a77e128" contribution="Map builder, XML"/> <!-- zzuf -->
</authors>
<created>2022-09-27</created>
<game>OITQ and Blitz</game>
<rage/>
<blitz/>
<time>3m</time>
<rules>
    <rule>Players may not take fall damage.</rule>
    <rule>Players have the ability to double jump.</rule>
</rules>
<broadcasts>
    <alert after="1s" every="1m">`7Swords `c`ldo not `7kill in one hit, but bow shots `a`ldo`7!`r</alert>
    <tip after="2s" every="1m">`7You can tap your jump key twice to `fdouble jump`7!`r</tip>
</broadcasts>
<teams>
    <team id="green" color="green" max="8" max-overfill="12">Green</team>
    <team id="blue" color="blue" max="8" max-overfill="12">Blue</team>
    <team id="yellow" color="yellow" max="8" max-overfill="12">Yellow</team>
    <team id="red" color="red" max="8" max-overfill="12">Red</team>
</teams>
<spawns>
    <spawn team="green" kit="players-kit" yaw="45">
        <regions>
            <cuboid min="-28.5,9,29.5" max="-26.5,9,27.5"/>
        </regions>
    </spawn>
    <spawn team="blue" kit="players-kit" yaw="-45">
        <regions>
            <cuboid min="29.5,9,29.5" max="27.5,9,27.5"/>
        </regions>
    </spawn>
    <spawn team="yellow" kit="players-kit" yaw="135">
        <regions>
            <cuboid min="-28.5,9,-28.5" max="-26.5,9,-26.5"/>
        </regions>
    </spawn>
    <spawn team="red" kit="players-kit" yaw="-135">
        <regions>
            <cuboid min="29.5,9,-28.5" max="27.5,9,-26.5"/>
        </regions>
    </spawn>
    <default yaw="90">
        <regions>
            <cylinder base="0.5,40,0.5" height="0" radius="1"/>
        </regions>
    </default>
</spawns>
<kits>
    <kit id="players-kit">
        <effect duration="oo" amplifier="1" ambient="false">jump_boost</effect>
        <effect duration="1s" amplifier="255" ambient="true">damage resistance</effect>
        <double-jump power="3" recharge-time="1s" recharge-before-landing="true"/>
        <game-mode>adventure</game-mode>
        <helmet team-color="true" unbreakable="true" locked="true" material="leather helmet"/>
    </kit>
</kits>
<classes family="oitq">
    <class name="Archer" description="Stone sword! Quick double jumps!" longdescription="Stone sword, insta-kill bow and double jumps!" icon="bow" default="true">
        <kit parents="players-kit">
            <item slot="0" unbreakable="true" name="`7`lRegular `rBowie Knife" lore="`8Multiple Hit Kill" material="stone sword"/>
            <item slot="1" unbreakable="true" name="`c`lMo`6`ldd`e`led `rRepeater" lore="`8One Hit Kill" enchantment="power:10" show-enchantments="false" material="bow"/>
            <item slot="2">arrow</item>
        </kit>
    </class>
    <class name="Brawler" description="Iron sword! No bow!" longdescription="Iron sword! No bow!" icon="potion:9">
        <kit parents="players-kit">
            <item slot="0" unbreakable="true" name="`c`lSharpened `rBowie Knife" lore="`8Multiple Hit Kill" material="iron sword"/>
        </kit>
    </class>
    <class name="Speedster" description="Wooden sword! Speed! No bow!" longdescription="Wooden sword! Speed! No bow!" icon="potion:2">
        <kit parents="players-kit">
            <item slot="0" unbreakable="true" name="`c`lSharpened `rStick" lore="`8Multiple Hit Kill" material="wood sword"/>
            <effect duration="oo" ambient="true">speed</effect>
        </kit>
    </class>
</classes>
<regions>
    <apply block="never" use="never"/>
    <above y="27" id="ceiling"/>
    <apply enter="never" region="ceiling"/>
</regions>
<portals>
    <portal x="@-34.5" y="@18" z="@35.5" yaw="@-135">
        <region>
            <cuboid min="-37,9,29" max="-38,11,31"/> <!-- green west portal -->
        </region>
    </portal>
    <portal x="@-34.5" y="@18" z="@35.5" yaw="@-135">
        <region>
            <cuboid min="-30,9,38" max="-28,11,39"/> <!-- green south portal -->
        </region>
    </portal>
    <portal x="@-34.5" y="@18" z="@-34.5" yaw="@-45">
        <region>
            <cuboid min="-37,9,-30" max="-38,11,-28"/> <!-- yellow west portal -->
        </region>
    </portal>
    <portal x="@-34.5" y="@18" z="@-34.5" yaw="@-45">
        <region>
            <cuboid min="-28,9,-37" max="-30,11,-38"/> <!-- yellow north portal -->
        </region>
    </portal>
    <portal x="@35.5" y="@18" z="@-34.5" yaw="@45">
        <region>
            <cuboid min="31,9,-37" max="29,11,-38"/> <!-- red north portal -->
        </region>
    </portal>
    <portal x="@35.5" y="@18" z="@-34.5" yaw="@45">
        <region>
            <cuboid min="38,9,-28" max="39,11,-30"/> <!-- red east portal -->
        </region>
    </portal>
    <portal x="@35.5" y="@18" z="@35.5" yaw="@135">
        <region>
            <cuboid min="29,9,38" max="31,11,39"/> <!-- blue south portal -->
        </region>
    </portal>
    <portal x="@35.5" y="@18" z="@35.5" yaw="@135">
        <region>
            <cuboid min="38,9,31" max="39,11,29"/> <!-- blue east portal -->
        </region>
    </portal>
</portals>
<actions>
    <action id="killstreak-sound" scope="player">
        <sound key="mob.enderdragon.growl" volume="1" pitch="0.8"/>
    </action>
</actions>
<kill-rewards>
    <kill-reward>
        <filter>
            <class>Archer</class>
        </filter>
        <item amount="1" material="arrow"/>
    </kill-reward>
    <kill-reward>
        <filter>
            <kill-streak count="3" repeat="false"/>
        </filter>
        <kit>
            <action>
                <message text=" `b`lTriple kill! `f(3 kills)"/>
                <action id="killstreak-sound"/>
            </action>
        </kit>
    </kill-reward>
    <kill-reward>
        <filter>
            <kill-streak count="5" repeat="false"/>
        </filter>
        <kit>
            <action>
                <message text=" `a`lKilling Spree! `f(5 kills)"/>
                <action id="killstreak-sound"/>
            </action>
        </kit>
    </kill-reward>
    <kill-reward>
        <filter>
            <kill-streak count="10" repeat="false"/>
        </filter>
        <kit>
            <action>
                <message text=" `e`lRampage! `f(10 kills)"/>
                <action id="killstreak-sound"/>
            </action>
        </kit>
    </kill-reward>
    <kill-reward>
        <filter>
            <kill-streak count="15" repeat="false"/>
        </filter>
        <kit>
            <action>
                <message text=" `6`lDominating! `f(15 kills)"/>
                <action id="killstreak-sound"/>
            </action>
        </kit>
    </kill-reward>
    <kill-reward>
        <filter>
            <kill-streak count="20" repeat="false"/>
        </filter>
        <kit>
            <action>
                <message text=" `c`lUnstoppable! `f(20 kills)"/>
                <action id="killstreak-sound"/>
            </action>
        </kit>
    </kill-reward>
    <kill-reward>
        <filter>
            <kill-streak count="30" repeat="false"/>
        </filter>
        <kit>
            <action>
                <message text=" `4`lGODLIKE! `f(30 kills)"/>
                <action id="killstreak-sound"/>
            </action>
        </kit>
    </kill-reward>
    <kill-reward>
        <filter>
            <kill-streak count="50" repeat="false"/>
        </filter>
        <kit>
            <action>
                <message text=" `0`l`kzzuf`r `f(50 kills)"/>
                <action id="killstreak-sound"/>
            </action>
        </kit>
    </kill-reward>
</kill-rewards>
<toolrepair>
    <tool>iron sword</tool>
    <tool>bow</tool>
    <tool>arrow</tool>
</toolrepair>
<itemremove>
    <item>leather helmet</item>
</itemremove>
<hunger>
    <depletion>off</depletion>
</hunger>
<disabledamage>
    <damage>fall</damage>
</disabledamage>
</map>