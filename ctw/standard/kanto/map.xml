<map proto="1.4.2">
<name>Kanto</name>
<version>1.5</version>
<include id="gapple-kill-reward"/>
<include id="iron-bulkcrafting"/>
<objective>Capture the enemy's wools!</objective>
<created>2021-12-21</created>
<phase>development</phase>
<authors>
    <author uuid="55cb168a-e28f-49e5-a853-8268093926c8"/> <!-- 0uzi -->
    <author uuid="fe3608b7-d105-4029-8800-34b3147065b6"/> <!-- rockymine -->
</authors>
<contributors>
    <contributor uuid="e2d2c2c6-cea9-4510-9ab2-a091b5605b30" contribution="XML help"/> <!-- Ruediger_LP -->
</contributors>
<teams>
    <team id="blue" color="blue" max="24">Blue</team>
    <team id="red" color="dark red" max="24">Red</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <clear/>
        <item slot="0" unbreakable="true" material="iron sword"/>
        <item slot="1" unbreakable="true" material="bow" enchantment="infinity"/>
        <item slot="2" unbreakable="true" material="diamond pickaxe"/>
        <item slot="3" unbreakable="true" material="diamond axe"/>
        <item slot="4" material="wood" amount="64" damage="1"/>
        <item slot="5" material="smooth brick" amount="64" damage="3"/>
        <item slot="6" material="water bucket"/>
        <item slot="8" material="golden apple"/>
        <item slot="28" material="arrow"/>
        <item slot="31" material="wood" amount="64" damage="1"/>
        <helmet unbreakable="true" material="leather helmet" team-color="true"/>
        <chestplate unbreakable="true" material="leather chestplate" team-color="true"/>
        <leggings unbreakable="true" material="chainmail leggings"/>
        <boots unbreakable="true" material="leather boots" team-color="true"/>
        <effect duration="5s" amplifier="255">damage resistance</effect>
    </kit>
</kits>
<spawns>
    <default yaw="90" region="obs-spawn-point"/>
    <spawn team="blue" kit="spawn-kit" yaw="0" region="blue-spawn-point"/>
    <spawn team="red" kit="spawn-kit" yaw="180" region="red-spawn-point"/>
</spawns>
<wools craftable="false" wool-proximity-metric="none" monument-proximity-metric="closest block">
    <wool team="red" color="pink" monument="red-pink-wool" location="37.5,15.2,-103.5"/>
    <wool team="red" color="purple" monument="red-purple-wool" location="-36.5,15.2,-103.5"/>
    <wool team="blue" color="yellow" monument="blue-yellow-wool" location="-36.5,15.2,104.5"/>
    <wool team="blue" color="orange" monument="blue-orange-wool" location="37.5,15.2,104.5"/>
</wools>
<filters>
    <deny id="deny-void">
        <void/>
    </deny>
    <deny id="deny-blue">
        <team id="only-blue">blue</team>
    </deny>
    <deny id="deny-red">
        <team id="only-red">red</team>
    </deny>
    <deny id="deny-in-wr">
        <material>beacon</material>
    </deny>
    <deny id="deny-beacon">
        <material>beacon</material>
    </deny>
    <deny id="deny-participating">
        <participating/>
    </deny>
    <all id="only-iron-renew">
        <material id="only-iron">iron block</material>
        <cause>world</cause>
    </all>
    <material id="only-air">air</material>
</filters>
<regions>
    <union id="spawn-points">
        <cylinder id="blue-spawn-point" base="0.5,18,-111.5" radius="2" height="0"/>
        <cylinder id="red-spawn-point" base="0.5,18,112.5" radius="2" height="0"/>
        <cylinder id="obs-spawn-point" base="0.5,48,0.5" radius="1.5" height="0"/>
    </union>
    <union id="spawns">
        <rectangle id="blue-spawn" min="15,-79" max="-14,-120"/>
        <rectangle id="red-spawn" min="15,80" max="-14,121"/>
    </union>
    <union id="wool-rooms">
        <!-- blue defends / red attacks -->
        <union id="blue-wool-rooms">
            <rectangle id="pink-wr" min="28,-96" max="47,-112"/>
            <rectangle id="purple-wr" min="-27,-96" max="-46,-112"/>
        </union>
        <!-- red defends / blue attacks -->
        <union id="red-wool-rooms">
            <rectangle id="yellow-wr" min="-27,97" max="-46,113"/>
            <rectangle id="orange-wr" min="28,97" max="47,113"/>
        </union>
    </union>
    <union id="wool-spawns">
        <point id="pink-wool-spawn">37.5,15.2,-103.5</point>
        <point id="purple-wool-spawn">-36.5,15.2,-103.5</point>
        <point id="yellow-wool-spawn">-36.5,15.2,104.5</point>
        <point id="orange-wool-spawn">37.5,15.2,104.5</point>
    </union>
    <union id="wool-monuments">
        <block id="red-pink-wool">3,18,107</block>
        <block id="red-purple-wool">-3,18,107</block>
        <block id="blue-yellow-wool">-3,18,-107</block>
        <block id="blue-orange-wool">3,18,-107</block>
    </union>
    <complement id="void">
        <everywhere/>
        <rectangle min="11,12" max="28,-11"/> <!-- east mid build region -->
        <rectangle min="-10,12" max="-27,-11"/> <!-- west mid build region -->
    </complement>
    <negative id="outside-map">
        <complement>
            <!-- we deny use outside of this region to prevent boat glitching -->
            <rectangle min="46,121" max="-45,-120"/> <!-- full map area, subtracting... -->
            <rectangle min="14,80" max="29,121"/> <!-- area between red spawn and orange wool lane -->
            <rectangle min="-13,80" max="-28,121"/> <!-- area between red spawn and yellow wool lane -->
            <rectangle min="14,-79" max="29,-120"/> <!-- area between blue spawn and pink wool lane -->
            <rectangle min="-13,-79" max="-28,-120"/> <!-- area between blue spawn and purple wool lane -->
        </complement>
    </negative>
    <apply use="deny-red" region="red-wool-rooms"/>
    <apply use="deny-blue" region="blue-wool-rooms"/>
    <apply use="deny-beacon" message="You may not use the beacon!"/>
    <apply use="deny-participating" region="outside-map"/>
    <apply enter="only-blue" region="blue-spawn" message="You may not enter the enemy's spawn!"/>
    <apply enter="only-red" region="red-spawn" message="You may not enter the enemy's spawn!"/>
    <apply enter="only-blue" region="red-wool-rooms" message="You may not enter your own wool room!"/>
    <apply enter="only-red" region="blue-wool-rooms" message="You may not enter your own wool room!"/>
    <apply block="deny-blue" region="blue-wool-rooms" message="You may not edit your own wool room!"/>
    <apply block="deny-red" region="red-wool-rooms" message="You may not edit your own wool room!"/>
    <apply block="deny-void" region="void" message="You may not edit the void!"/>
    <apply block-place="only-iron-renew" block-break="only-iron" region="spawns" message="You may only break iron blocks in spawn!"/>
    <apply block="deny-in-wr" region="wool-rooms" message="You may not break the beacon!"/>
</regions>
<!-- wool spawn stuff -->
<spawners>
    <spawner spawn-region="pink-wool-spawn" player-region="pink-wr" delay="2s">
        <item material="wool" damage="6"/>
    </spawner>
    <spawner spawn-region="purple-wool-spawn" player-region="purple-wr" delay="2s">
        <item material="wool" damage="10"/>
    </spawner>
    <spawner spawn-region="yellow-wool-spawn" player-region="yellow-wr" delay="2s">
        <item material="wool" damage="4"/>
    </spawner>
    <spawner spawn-region="orange-wool-spawn" player-region="orange-wr" delay="2s">
        <item material="wool" damage="1"/>
    </spawner>
</spawners>
<renewables>
    <renewable region="spawns" renew-filter="only-iron" rate="1"/>
</renewables>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>leather boots</item>
    <item>string</item>
</itemremove>
<itemkeep>
    <item>iron sword</item>
    <item>bow</item>
    <item>diamond pickaxe</item>
    <item>diamond axe</item>
    <item>wood</item>
    <item>smooth brick</item>
    <item>water bucket</item>
    <item>bucket</item>
    <item>golden apple</item>
    <item>arrow</item>
</itemkeep>
<kill-rewards>
    <kill-reward>
        <item material="wood" amount="16" damage="1"/>
        <item material="smooth brick" amount="16" damage="3"/>
    </kill-reward>
</kill-rewards>
<maxbuildheight>28</maxbuildheight>
<hunger>
    <depletion>off</depletion>
</hunger>
</map>